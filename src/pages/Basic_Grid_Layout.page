        <body>
            
            <!-- REQUIRED SLDS WRAPPER -->
            <div class="slds-scope">
                
                <div class="slds-grid slds-wrap">
                    <div class="slds-box slds-theme_shade slds-size--1-of-1">1</div>
                    <div class="slds-box slds-theme_shade slds-size--1-of-2 slds-medium-size--5-of-6 slds-large-size--8-of-12">2</div>
